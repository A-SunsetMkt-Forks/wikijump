{
  "name": "root",
  "license": "agpl-3.0-or-later",
  "description": "Private root package for the Wikijump client monorepo.",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "clean-node": "lerna clean --yes",
    "clean": "lerna run --parallel clean",
    "echo-ts": "echo [tsc] Compiling declarations...",
    "build:modules:es": "node build-modules.js",
    "build:modules:dts": "tsc -b --force",
    "build:modules": "run-s -s echo-ts build:modules:dts build:modules:es",
    "build": "run-s -s clean build:modules",
    "dev:modules:es": "node build-modules.js -w -g",
    "dev:modules:dts": "tsc -b -w | node quiet-tsc.js",
    "dev:modules": "npm -s run build:modules:dts && run-p -s dev:modules:*",
    "dev": "npm -s run dev:modules",
    "test": "lerna run --parallel test:build && uvu modules tests\\\\dist",
    "update": "npm i && run-s clean-node bootstrap build",
    "eslint": "eslint \"./**/*.js\" \"./**/*.ts\"",
    "eslint-fix": "npm -s run eslint -- --fix",
    "prettier": "prettier --check \"./**/*.js\" \"./**/*.ts\"",
    "prettier-fix": "prettier --write \"./**/*.js\" \"./**/*.ts\""
  },
  "workspaces": [
    "modules/*"
  ],
  "browserslist": [
    "supports es6-module and > 0.2% and last 2 versions",
    "Firefox ESR",
    "not dead",
    "not ie > 0"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scpwiki/wikijump.git"
  },
  "bugs": {
    "url": "https://scuttle.atlassian.net/servicedesk/customer/portal/2"
  },
  "homepage": "https://github.com/scpwiki/wikijump#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@typescript-eslint/typescript-estree": "^4.22.0",
    "browserslist": "^4.16.4",
    "esbuild": "^0.11.9",
    "esbuild-node-externals": "^1.1.0",
    "eslint": "^7.24.0",
    "eslint-plugin-clean-regex": "^0.5.1",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-svelte3": "^3.1.2",
    "estrella": "^1.4.0",
    "lerna": "^4.0.0",
    "noop-stream": "^0.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "svelte": "^3.37.0",
    "trash-cli": "^4.0.0",
    "typescript": "4.2.4",
    "uvu": "^0.5.1"
  }
}
