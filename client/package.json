{
  "name": "root",
  "license": "agpl-3.0-or-later",
  "description": "Private root package for the Wikijump client monorepo.",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --loglevel success",
    "build": "ultra --rebuild -r build",
    "dev:dev-sandbox": "ultra --raw -r --filter \"web/dev-sandbox\" dev",
    "lerna:clean": "lerna clean --yes --loglevel success",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"./**/*.js\" \"./**/*.ts\"",
    "lint:fix": "npm run lint:fix:eslint && npm run lint:fix:prettier",
    "lint:fix:eslint": "eslint \"./**/*.js\" \"./**/*.ts\" --fix",
    "lint:fix:prettier": "prettier --write \"modules/\" \"web/\"",
    "lint:prettier": "prettier --check \"modules/\" \"web/\"",
    "serve-docs": "ultra --raw -r --filter \"web/wj-docs\" serve",
    "test": "trash tests-dist && node scripts/build-tests.js && uvu ./tests-dist",
    "update": "npm i && ultra --raw update:cmd",
    "update:cmd": "npm run lerna:clean && npm run bootstrap && npm run build",
    "nabs": "nabs"
  },
  "workspaces": [
    "components",
    "modules/*",
    "web/*"
  ],
  "browserslist": [
    "supports es6-module and > 0.2% and last 2 versions",
    "Firefox ESR",
    "not dead",
    "not ie > 0"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scpwiki/wikijump.git",
    "directory": "client"
  },
  "bugs": "https://scuttle.atlassian.net/servicedesk/customer/portal/2",
  "homepage": "https://github.com/scpwiki/wikijump#readme",
  "devDependencies": {
    "@strictsoftware/typedoc-plugin-monorepo": "^0.4.2",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.9",
    "@types/jsdom": "^16.2.10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@typescript-eslint/typescript-estree": "^4.22.0",
    "esbuild": "^0.11.18",
    "esbuild-svelte": "^0.5.0",
    "eslint": "^7.25.0",
    "eslint-plugin-clean-regex": "^0.5.1",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.3",
    "jsdom": "^16.5.3",
    "lerna": "^4.0.0",
    "nabs": "^0.3.0",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "ora": "^5.4.0",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "2.2.0",
    "sass": "^1.32.12",
    "svelte": "^3.38.1",
    "svelte-preprocess": "^4.7.3",
    "svelte-preprocess-esbuild": "^2.0.0",
    "svelte2tsx": "^0.1.189",
    "toml": "^3.0.0",
    "trash-cli": "^4.0.0",
    "typedoc": "^0.20.36",
    "typedoc-plugin-rename-defaults": "^0.1.0",
    "typescript": "4.3.0-beta",
    "typescript-json-schema": "^0.50.0",
    "ultra-runner": "^3.10.5",
    "uvu": "^0.5.1",
    "vite": "^2.2.3"
  }
}
