{
  "name": "root",
  "license": "agpl-3.0-or-later",
  "private": true,
  "description": "Private root package for the Wikijump client monorepo.",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "clean-modules": "lerna clean --yes",
    "clean": "lerna run --parallel clean",
    "build:es": "node build.js",
    "build:dts": "tsc -b --force",
    "build": "run-s -s clean build:dts build:es",
    "dev:es": "node build.js -w -g",
    "dev:dts": "tsc -b -w",
    "dev": "npm -s run build:dts && run-p -s dev:*",
    "update": "npm i && run-s clean-modules bootstrap build"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scpwiki/wikijump.git"
  },
  "bugs": {
    "url": "https://scuttle.atlassian.net/servicedesk/customer/portal/2"
  },
  "homepage": "https://github.com/scpwiki/wikijump#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@typescript-eslint/typescript-estree": "^4.22.0",
    "esbuild": "^0.11.9",
    "esbuild-node-externals": "^1.1.0",
    "eslint": "^7.24.0",
    "eslint-plugin-clean-regex": "^0.5.1",
    "eslint-plugin-svelte3": "^3.1.2",
    "estrella": "^1.4.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "trash-cli": "^4.0.0",
    "typescript": "4.2.4"
  }
}
