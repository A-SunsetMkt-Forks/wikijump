{
  "name": "root",
  "license": "agpl-3.0-or-later",
  "description": "Private root package for the Wikijump client monorepo.",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --loglevel success",
    "build": "ultra --build build:cmd",
    "build:cmd": "npm run build:cmd:packages && ultra -r --no-pretty --filter \"web/*\" build",
    "build:cmd:packages": "tsc -b && ultra -r --raw --filter \"modules/*\" build && ultra -r --raw --filter components build",
    "clean": "ultra --silent -r clean",
    "dev": "ultra dev:cmd",
    "dev:cmd": "tsc -b -w && node scripts/build-modules.js -w -g && ultra --raw -r --filter components dev",
    "dev:dev-sandbox": "ultra --no-pretty dev:dev-sandbox:cmd",
    "dev:dev-sandbox:cmd": "ultra --silent dev:cmd && ultra --raw -r --filter \"web/dev-sandbox\" dev",
    "lerna:clean": "lerna clean --yes --loglevel success",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"./**/*.js\" \"./**/*.ts\"",
    "lint:fix": "npm run lint:fix:eslint && npm run lint:fix:prettier",
    "lint:fix:eslint": "eslint \"./**/*.js\" \"./**/*.ts\" --fix",
    "lint:fix:prettier": "prettier --write \"modules/\" \"web/\"",
    "lint:prettier": "prettier --check \"modules/\" \"web/\"",
    "rebuild": "run-s -s clean build",
    "test": "node scripts/build-modules.js -tests && node scripts/build-components.js -tests && uvu ./ tests[/\\\\\\\\]dist -i misc",
    "update": "npm i && run-s -s lerna:clean clean bootstrap build",
    "nabs": "nabs"
  },
  "ultra": {
    "concurrent": [
      "clean",
      "dev:cmd",
      "build:cmd:packages",
      "dev:dev-sandbox:cmd"
    ]
  },
  "workspaces": [
    "components",
    "modules/*",
    "web/*"
  ],
  "browserslist": [
    "supports es6-module and > 0.2% and last 2 versions",
    "Firefox ESR",
    "not dead",
    "not ie > 0"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scpwiki/wikijump.git"
  },
  "bugs": {
    "url": "https://scuttle.atlassian.net/servicedesk/customer/portal/2"
  },
  "homepage": "https://github.com/scpwiki/wikijump#readme",
  "devDependencies": {
    "@types/jsdom": "^16.2.10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@typescript-eslint/typescript-estree": "^4.22.0",
    "browserslist": "^4.16.4",
    "esbuild": "^0.11.13",
    "esbuild-node-externals": "^1.2.0",
    "esbuild-svelte": "^0.4.3",
    "eslint": "^7.24.0",
    "eslint-plugin-clean-regex": "^0.5.1",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-svelte3": "^3.1.2",
    "estrella": "^1.4.0",
    "globby": "^11.0.3",
    "jsdom": "^16.5.3",
    "lerna": "^4.0.0",
    "nabs": "^0.3.0",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "2.2.0",
    "svelte": "^3.37.0",
    "svelte-preprocess": "^4.7.2",
    "svelte-preprocess-esbuild": "^2.0.0",
    "svelte2dts": "^0.2.12",
    "svelte2tsx": "^0.1.186",
    "toml": "^3.0.0",
    "trash-cli": "^4.0.0",
    "typescript": "4.3.0-beta",
    "ultra-runner": "^3.10.5",
    "uvu": "^0.5.1",
    "vite": "^2.2.1"
  }
}
