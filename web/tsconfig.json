{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./web/files--common/dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "esnext",
        "strict": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "types": [ "jest" ],
        "lib": [ "esnext", "dom", "dom.iterable" ],
        "paths": {
            "@/*": ["web/files--common/*"],
            "@Modules": ["web/files--common/modules/js"],
            "@Modules/*": ["web/files--common/modules/js/*"]
        }
    },
    "include": [
        "./web/files--common/**/*.ts",
        "./web/files--common/**/*.js",
        "./tests/js/**/*.ts"
    ]
}
